<!-- Bootstrapのテーブル適用 -->
<div class="container table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <tr class="success">
      <th>ID</th>
      <th>名前</th>
      <th>Eメール</th>
      <th >登録日時</th>
      <th >管理者</th>
      <% if current_user.admin? %>
      <th colspan="2">操作</th>
      <% end %>
    </tr>
    <!-- 全ユーザーを順に表示 -->
    <!-- <% @user.each do |user| %> -->
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= l user.created_at, format: :default %></td>
        <td class="text-center"><%= "◯" if user.admin?  %></td>

        <!-- 管理者の場合は、編集・削除ボタンを表示 -->
        <% if current_user.admin? %>
            <!-- 自分以外のユーザーの場合は、編集・削除ボタンを表示 -->
          <td class="text-center">
            <%= link_to '編集', edit_user_registration_path(user), class: "btn btn-primary btn-xs" if !(current_user == user) %>
          </td>
          <td class="text-center">
            <%= link_to '削除', user, method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: "btn btn-danger btn-xs" if !(current_user == user) %>
          </td>
        <% end %>
      </tr>
    <!-- <% end %> -->
  </table>
  </div>
