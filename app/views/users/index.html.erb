<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>ユーザー一覧</h2>

      <div class="container table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <tr class="success">
            <th>ID</th>
            <th>名前</th>
            <th>Eメール</th>
            <th>登録日時</th>
            <th colspan="2"></th>
          </tr>
          <% @user.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= l user.created_at, format: :default %></td>
              <td><%= link_to '編集', edit_user_registration_path(current_user) %></td>

              <!-- ログインユーザー以外の削除ボタンを表示 -->
              <% unless current_user == user %>
                <td><%= link_to '削除', user, method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: 'btn btn-danger btn-xs' %></td>
              <% else %>
                <td></td>
              <% end %>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
