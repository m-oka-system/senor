<div class="container">
  <h2>店舗を登録する
    (
    <%= @customer.id %>,
    <%= @customer.customer_name %>
    )
  </h2>


  <%= form_for [@customer, @store] do |f| %>
  <%= render 'layouts/storeErrMsg' %>

  <table class="table table-bordered ">
    <tbody>

      <div class="form-group">
        <tr>
          <td class="active text-right"><%= f.label "顧客ID", class:"control-label" %></td>
          <td><%= f.text_field :customer_id, autofocus: true, class:"form-control" %></td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right"><%= f.label "店舗コード", class:"control-label" %></td>
          <td><%= f.text_field :store_code, autofocus: true, class:"form-control" %></td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right"><%= f.label "店舗名", class:"control-label" %></td>
          <td><%= f.text_field :store_name, autofocus: true, class:"form-control" %></td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td rowspan="4", class="active text-right">
            <b>住所</b>
          </td>
          <td>
            <%= f.label "郵便番号", class:"control-label" %>
            <%= f.text_field :postal_code, autofocus: true, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td>
            <%= f.label "都道府県", class:"control-label" %>
            <%= f.text_field :prefectures, autofocus: true, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td>
            <%= f.label "市区町村", class:"control-label" %>
            <%= f.text_field :city, autofocus: true, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td>
            <%= f.label "町名・番地・建物", class:"control-label" %>
            <%= f.text_field :town_name, autofocus: true, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right">
            <%= f.label "電話番号", class:"control-label" %>
          </td>
          <td>
            <%= f.text_field :phone_number, autofocus: true, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right">
            <%= f.label "FAX番号", class:"control-label" %>
          </td>
          <td>
            <%= f.text_field :fax_number, autofocus: true, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right">
            <%= f.label "営業開始時間", class:"control-label" %>
          </td>
          <td>
            <%= f.text_field :business_hours_start, autofocus: true, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right">
            <%= f.label "営業終了時間", class:"control-label" %>
          </td>
          <td>
            <%= f.text_field :business_hours_end, autofocus: true, class:"form-control" %>
          </td>
        </tr>
      </div>


      <div class="form-group">
        <tr>
          <td class="active text-right">
            <%= f.label "POSタイプ", class:"control-label" %>
          </td>
          <td>
            <%= f.text_field :pos_type, autofocus: true, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right">
            <%= f.label "IPアドレス", class:"control-label" %>
          </td>
          <td>
            <%= f.text_field :ip_address, autofocus: true, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right">
            <%= f.label "備考", class:"control-label" %>
          </td>
          <td>
            <%= f.text_field :remarks, autofocus: true, class:"form-control" %>
          </td>
        </tr>
      </div>

    </tbody>
  </table>

  <input style="visibility:hidden" value="#{@customer.id}">

    <div class="actions col-md-offset-9 col-md-3">
      <%= f.submit "登録する", class:"btn btn-lg btn-primary btn-block" %>
    </div>



  <% end %>

</div>
