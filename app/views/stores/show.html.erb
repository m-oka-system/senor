<div class="container bg-info">
  <div class="row">
    <div class="col-md-12">
      <%= @customer.customer_name %>(<%= @store.id %>)
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <ul>
        <li><%= @store.store_code %></li>
        <li><%= @store.store_name %></li>
        <li><%= @store.phone_number %></li>
        <li><%= @store.fax_number %></li>
        <li><%= @store.business_hours_start %>〜<%= @store.business_hours_end %></li>
        <li><%= @store.pos_type %></li>
        <li><%= @store.ip_address %></li>
        <li><%= @store.remarks %></li>
        <li><%= @store.latitude %></li>
        <li><%= @store.longitude %></li>
        <li><%= "経度は#{@store.longitude}です" %></li>
      </ul>
    </div>

    <!-- GoogleMapを表示 ココカラ-->
    <div class="col-md-6" style=”backgroudcolor: white” >
      <div id="map" style="width:300px; height:300px"></div>

      <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDTL0X-TbmwRU0bHv4nCu91wSFn4D2bxsY&sensor=false&callback=init"></script>
      <script type="text/javascript">
      function init() {

      // 緯度経度の指定
        var latlng = new google.maps.LatLng(35.6601301,139.6986372);

        // マップの表示オプションを指定
        var options = {
        zoom: 15,
        center: latlng,
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        };

        // 指定のタグにマップを表示
        var map = new google.maps.Map(document.getElementById("map"), options);

        // ピンを立てる
        new google.maps.Marker({
          position: latlng,
          map: map
        });
      };

      google.maps.event.addDomListener(window, 'load', init);

      </script>
      <!-- GoogleMapを表示 ココマデ-->

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= link_to "インシデントを登録する", new_customer_store_ticket_path(@customer, @store), class:"btn btn-lg btn-primary pull-right" %>
    </div>
    <div class="col-md-4">
      <%= link_to "インシデント一覧を表示する", tickets_path(@ticket), class:"btn btn-lg btn-primary pull-right" %>
    </div>
  </div>


    <%#= render template: "tickets/index" %>
</div>
