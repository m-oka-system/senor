<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>顧客一覧</h2>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <%= link_to "顧客を登録する", new_customer_path, class:"btn btn-lg btn-primary pull-right" %>
    </div>
  </div>

  <div class="row">
    <div class="container table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <!-- テーブルのヘッダー部 -->
        <tr class="success">
          <th>ID</th>
          <th>会社名</th>
          <th>事業</th>
          <th >電話番号</th>
          <th >登録日時</th>
          <th colspan="2"></th>
        </tr>
        <!-- テーブルのデータ部はパーシャルへ -->
        <%= render @customer %>
      </table>
    </div>
  </div>
</div>
