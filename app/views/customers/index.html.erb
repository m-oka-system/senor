<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>顧客一覧</h2>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <%= link_to "顧客を登録する", new_customer_path, class:"btn btn-lg btn-primary pull-right" %>
    </div>
  </div>

  <div class="row">
    <div class="container table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <!-- テーブルのヘッダー部 -->
        <tr class="success">
          <th>ID</th>
          <th>会社名</th>
          <th>事業</th>
          <th >電話番号</th>
          <th >登録日時</th>
          <th colspan="2"></th>
        </tr>
        <% @customer.each do |customer| %>
          <tr>
            <td><%= link_to customer.id, customer_path(customer) %></td>
            <td><%= customer.customer_name %></td>
            <td><%= customer.business %></td>
            <td><%= customer.phone_number %></td>
            <td><%= l customer.created_at, format: :default %></td>

            <!-- 管理者の場合は、編集・削除ボタンを表示 -->
            <% if current_user.admin? %>
              <td class="text-center">
                <%= link_to '編集', edit_customer_path(customer), class: "btn btn-primary btn-xs" %>
              </td>
              <td class="text-center">
                <%= link_to '削除', customer, method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: "btn btn-danger btn-xs" %>
              </td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
