<div class="container bg-info">
  <div class="row">
    <div class="col-md-12">
      <%= @customer.id %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= image_tag @customer.image, size: "100x100" %>
    </div>

    <div class="col-md-8">
      <div class="row">
        <%= @customer.customer_name %>
      </div>
      <div class="row">
        <%= @customer.business %>
      </div>
      <div class="row">
        <%= @customer.phone_number %>
      </div>
      <div class="row">
        <%= @customer.fax_number %>
      </div>
      <div class="row">
        <%= @customer.url %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-8">
      <%= link_to "店舗を登録する", new_customer_store_path(@customer), class:"btn btn-lg btn-primary pull-right" %>
    </div>
  </div>

  <div class="row">
    <div class="container table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <!-- テーブルのヘッダー部 -->
        <tr class="success">
          <th>店舗コード</th>
          <th>店舗名</th>
          <th>営業時間</th>
          <th >機種</th>
          <th >IPアドレス</th>
          <th >備考</th>
          <th colspan="2"></th>
        </tr>
        <!-- テーブルのデータ部はパーシャルへ -->
        <%#= render @customer %>
      </table>
    </div>
  </div>
</div>
