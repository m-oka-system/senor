<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>ユーザー登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'layouts/deviseErrMsg' %>
      <%#= devise_error_messages! %>

      <div class="form-group">
        <%= f.label "Eメール", class:"control-label" %>
        <%= f.email_field :email, autofocus: true, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "パスワード", class:"control-label" %>
        <% if @validatable %>
          <em>(<%= @minimum_password_length %>
            文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "パスワードの確認", class:"control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class:"btn btn-lg btn-primary btn-block" %>
      </div>
      <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
